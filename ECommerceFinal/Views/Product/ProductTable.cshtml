@model List<EcommerceEntities.Product>
@{

    ViewBag.Title = "ProductTable";
}
<link rel="stylesheet" type="text/css" href="~/Content/DataTables/datatables.min.css" />
<script type="text/javascript" src="~/Content/DataTables/datatables.min.js"></script>

<div>
    <form method="post">

        <div class="container-fluid">
            <div class="row">

                <div class="col-lg-1 m-1 p-2">
                    <div class="order-button-payment">
                        <input type="button" value="New Product" id="btnNew" >

                    </div>
                </div>
            </div>
        </div>

    </form>
</div>
<div>
    <table id="ProductsTable" class="table table-striped	 ">
        <thead>
            <tr>
                <td>Product Name</td>
                <td>Category</td>
                <td>Price</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td> @product.Name</td>
                    <td>@product.Category.ID</td>
                    <td>@product.Price</td>
                    <td>
                        <button class="btnEdit" data-id="@product.ID">Edit</button>
                        <button class="btnDelete" data-id="@product.ID">Delete</button>
                    </td>
                </tr>

            }
        </tbody>
    </table>

</div>


<script>
    $('#ProductsTable').DataTable();
    $("#btnSearch").click(function () {
        var searchValue = $('#txtSearch').val();
        $.ajax(
            {
                url: '/Product/ProductTable',
                data: {
                    search: searchValue
                }
            }
        )
            .done(function (response) {
                $("#tableContainer").html(response);
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("fails");
            });

    });

    $("#btnNew").click(function () {
        $.ajax(
            {
                url: '/Product/Create',

            }
        )
            .done(function (response) {
                $("#actionContainer").html(response);
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("fails");
            });

    });
    $(".btnEdit").click(function () {
        $.ajax(
            {
                url: '/Product/Edit',
                data: {
                    ID: $(this).attr('data-id')
                }

            }
        )
            .done(function (response) {
                $("#actionContainer").html(response);
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("fails");
            });

    });
    $(".btnDelete").click(function () {
        var confirmDelete = confirm("Are you sure you want to delete this product?");
        if (confirmDelete) {
            $.ajax(
                {
                    type: 'POST',
                    url: '/Product/Delete',
                    data: {
                        ID: $(this).attr('data-id')
                    }

                }
            )
                .done(function (response) {
                    $("#tableContainer").html(response);
                })
                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("fails");
                });


        }
    });


</script>
