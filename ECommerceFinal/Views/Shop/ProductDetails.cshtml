            product = [];
        }

        var prodID = $(this).attr("data-id");

        products.push(prodID);

        $.cookie('CartProducts', products.join('-'), { path: '/' })


        $('.cartProductCount').html(products.length);

    });


    $('.back-button').on('click', function () {

   location.href = '@Url.Action("Index", "Shop")';


    });
</script>